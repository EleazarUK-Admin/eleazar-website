<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <div class="header-content">
                <div class="profile-info">
                    <h1>Eleazar Gonzalez</h1>
                    <p>Cloud Consultant & Data Professional</p>
                    <div class="profile-contact">
                        <a href="mailto:admin@eleazar.ai" class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <span>admin@eleazar.ai</span>
                        </a>
                        <a href="tel:+447716085825" class="contact-item">
                            <i class="fas fa-phone"></i>
                            <span>+44 77-1608-5825</span>
                        </a>
                        <a href="https://linkedin.com/in/eleazargonzalezh/" target="_blank" class="contact-item">
                            <i class="fab fa-linkedin"></i>
                            <span>LinkedIn</span>
                        </a>
                        <a href="https://github.com/Eleazarrr1979/" target="_blank" class="contact-item">
                            <i class="fab fa-github"></i>
                            <span>GitHub</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    
    <!-- Navigation -->
    <nav>
        <div class="container">
            <ul class="nav-links">
                <li class="<%= activeNav === 'about' ? 'active' : '' %>"><a href="#about">About</a></li>
                <li class="<%= activeNav === 'experience' ? 'active' : '' %>"><a href="#experience">Experience</a></li>
                <li class="<%= activeNav === 'education' ? 'active' : '' %>"><a href="#education">Education</a></li>
                <li class="<%= activeNav === 'certifications' ? 'active' : '' %>"><a href="#certifications">Certifications</a></li>
                <li class="<%= activeNav === 'skills' ? 'active' : '' %>"><a href="#skills">Skills</a></li>
                <li class="<%= activeNav === 'contact' ? 'active' : '' %>"><a href="#contact">Contact</a></li>
            </ul>
        </div>
    </nav>
    
    <!-- About Section -->
    <section id="about" class="animate">
        <div class="container">
            <div class="section-header">
                <h2>About Me</h2>
            </div>
            <div class="about-content">
                <div class="about-text">
                    <p>I'm a certified Cloud Engineer and Data Professional with experience in Google Cloud Platform, data pipelines, and digital analytics. Currently working at Acceleration, I help advertisers modernize their business operations with a focus on sustainable growth through seamless integrations of media strategy, data management, privacy practices, and technology investments.</p>
                    <p>With a background in both data engineering and project management, I bring a versatile skill set to the table. I have expertise in developing dynamic data pipelines through Google Cloud Platform, integrating various APIs, and implementing CI/CD methodologies for enterprise repositories.</p>
                    <div class="skills-cloud">
                        <span class="skill-tag">Google Cloud Platform</span>
                        <span class="skill-tag">Python</span>
                        <span class="skill-tag">Data Engineering</span>
                        <span class="skill-tag">SQL</span>
                        <span class="skill-tag">Terraform</span>
                        <span class="skill-tag">dbt</span>
                        <span class="skill-tag">Vertex AI</span>
                        <span class="skill-tag">Apache Airflow</span>
                        <span class="skill-tag">DevOps</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Experience Section -->
    <section id="experience" class="animate">
        <div class="container">
            <div class="section-header">
                <h2>Professional Experience</h2>
            </div>
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-point"></div>
                    <div class="timeline-content">
                        <h3>Cloud Engineer</h3>
                        <div class="timeline-date">September 2023 - Present</div>
                        <p><strong>ACCELERATION</strong></p>
                        <ul>
                            <li>Member of a global network of consultants aiding advertisers in modernizing business operations</li>
                            <li>Focus on sustainable growth through seamless integrations of media strategy, data management, privacy practices, and technology investments</li>
                            <li>Delivery of digital analytics value in advertisement by deploying server-side Google Tag Manager and advanced GA4 integration</li>
                            <li>Optimize audiences for cookie-less environments</li>
                        </ul>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-point"></div>
                    <div class="timeline-content">
                        <h3>Cloud Data Engineer</h3>
                        <div class="timeline-date">December 2020 - September 2023</div>
                        <p><strong>ESSENCEMEDIACOM</strong></p>
                        <ul>
                            <li>Developed dynamic data pipelines through Google Cloud Platform</li>
                            <li>Ingested and transformed data from various APIs (Google Analytics, Google Ads, Facebook, TikTok)</li>
                            <li>Implemented CI/CD methodologies for enterprise repositories in Github</li>
                            <li>Automated processes from databases and dashboards with versioning control</li>
                            <li>Audited security access and data governance within GCP projects</li>
                            <li>Implemented least privilege access for external connectors</li>
                        </ul>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-point"></div>
                    <div class="timeline-content">
                        <h3>Data Consultant</h3>
                        <div class="timeline-date">February 2019 - August 2019</div>
                        <p><strong>INTELITE</strong></p>
                        <ul>
                            <li>Structured migration of 20 years historical data from ORACLE to PostgreSQL</li>
                            <li>Improved tables and schema architecture to optimize services</li>
                            <li>Developed a modular web application for querying a 20-year-old media database</li>
                            <li>Led social media monitoring project analyzing over 2 million tweets and Facebook posts</li>
                        </ul>
                    </div>
                </div>
                <!-- Additional experience items... -->
            </div>
        </div>
    </section>
    
    <!-- Education Section -->
    <section id="education" class="animate">
        <div class="container">
            <div class="section-header">
                <h2>Education</h2>
            </div>
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-point"></div>
                    <div class="timeline-content">
                        <h3>MSc Business Analytics: Operational Research and Risk Analysis</h3>
                        <div class="timeline-date">2019 - 2020</div>
                        <p><strong>ALLIANCE MANCHESTER BUSINESS SCHOOL, UK</strong></p>
                        <p>Dissertation research in collaboration with CAPITA on interpretability of black-box models by analyzing state-of-the-art methodologies on image classification through convolutional neural networks.</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-point"></div>
                    <div class="timeline-content">
                        <h3>Bachelor of Technology in Mechatronics Engineering</h3>
                        <div class="timeline-date">2010 - 2014</div>
                        <p><strong>TECNOLOGICO DE MONTERREY (ITESM), Mexico</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Display Featured Projects if available -->
    <% if (featuredProjects && featuredProjects.length > 0) { %>
    <section id="featured-projects" class="animate">
        <div class="container">
            <div class="section-header">
                <h2>Featured Projects</h2>
            </div>
            <div class="projects-grid">
                <% featuredProjects.forEach(project => { %>
                    <div class="project-card">
                        <div class="project-image">
                            <img src="<%= project.image %>" alt="<%= project.title %>">
                        </div>
                        <div class="project-info">
                            <h3><%= project.title %></h3>
                            <p><%= project.description %></p>
                            <div class="project-tech">
                                <% project.technologies.forEach(tech => { %>
                                    <span class="tech-tag"><%= tech %></span>
                                <% }) %>
                            </div>
                            <div class="project-links">
                                <% if (project.liveUrl) { %>
                                    <a href="<%= project.liveUrl %>" target="_blank" class="btn btn-sm">Live Demo</a>
                                <% } %>
                                <% if (project.github) { %>
                                    <a href="<%= project.github %>" target="_blank" class="btn btn-sm btn-outline">GitHub</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>
    <% } %>
    
    <!-- Display Latest Blog Posts if available -->
    <% if (latestPosts && latestPosts.length > 0) { %>
    <section id="latest-posts" class="animate">
        <div class="container">
            <div class="section-header">
                <h2>Latest Blog Posts</h2>
            </div>
            <div class="posts-grid">
                <% latestPosts.forEach(post => { %>
                    <div class="post-card">
                        <div class="post-meta">
                            <span class="post-date"><%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                        </div>
                        <h3 class="post-title"><a href="/blog/<%= post.slug %>"><%= post.title %></a></h3>
                        <p class="post-excerpt"><%= post.excerpt %></p>
                        <div class="post-tags">
                            <% post.tags.forEach(tag => { %>
                                <span class="post-tag"><%= tag %></span>
                            <% }) %>
                        </div>
                        <a href="/blog/<%= post.slug %>" class="read-more">Read More →</a>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>
    <% } %>
    
    <!-- Certifications -->
    <section id="certifications" class="animate">
        <div class="container">
            <div class="section-header">
                <h2>Certifications</h2>
            </div>
            <div class="certifications-grid">
                <div class="certification-card">
                    <div class="certification-logo">
                        <img src="/images/certifications/de.png" alt="Google Cloud Data Engineer">
                    </div>
                    <div class="certification-info">
                        <h3>Google Cloud Certified - Professional Data Engineer</h3>
                        <p><strong>Issued:</strong> November 2020</p>
                        <p class="valid-until"><strong>Valid until:</strong> December 2024</p>
                    </div>
                </div>
                <div class="certification-card">
                    <div class="certification-logo">
                        <img src="/images/certifications/ar.png" alt="Google Cloud Architect">
                    </div>
                    <div class="certification-info">
                        <h3>Google Cloud Certified - Professional Cloud Architect</h3>
                        <p><strong>Issued:</strong> September 2023</p>
                        <p class="valid-until"><strong>Valid until:</strong> September 2025</p>
                    </div>
                </div>
                <div class="certification-card">
                    <div class="certification-logo">
                        <img src="/images/certifications/ml.png" alt="GCP Machine Learning Engineer">
                    </div>
                    <div class="certification-info">
                        <h3>Google Cloud Certified - Machine Learning Engineer</h3>
                        <p><strong>Status:</strong> November 2024</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Skills Section -->
    <section id="skills" class="animate">
        <div class="container">
            <div class="section-header">
                <h2>Skills & Technologies</h2>
            </div>
            <div class="skills-categories">
                <div class="category">
                    <h3>Languages & Frameworks</h3>
                    <div class="skills-cloud">
                        <span class="skill-tag">Python</span>
                        <span class="skill-tag">R</span>
                        <span class="skill-tag">SQL</span>
                        <span class="skill-tag">C++</span>
                        <span class="skill-tag">JavaScript</span>
                        <span class="skill-tag">Terraform</span>
                    </div>
                </div>
                <div class="category">
                    <h3>Cloud Computing</h3>
                    <div class="skills-cloud">
                        <span class="skill-tag">Google Cloud Platform</span>
                        <span class="skill-tag">Cloud Architecture</span>
                        <span class="skill-tag">BigQuery</span>
                        <span class="skill-tag">Cloud Functions</span>
                        <span class="skill-tag">Dataflow</span>
                        <span class="skill-tag">Pub/Sub</span>
                    </div>
                </div>
                <!-- Additional skills categories... -->
            </div>
        </div>
    </section>
    
    <!-- Contact Section -->
    <section id="contact" class="animate">
        <div class="container">
            <div class="section-header">
                <h2>Get In Touch</h2>
            </div>
            <div class="contact-form">
                <form action="/contact" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" placeholder="Your Name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Your Email" required>
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" id="subject" name="subject" placeholder="Subject" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" name="message" placeholder="Your Message" required></textarea>
                    </div>
                    <button type="submit" class="btn">Send Message</button>
                </form>
            </div>
        </div>
    </section>
    
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <p>&copy; <%= new Date().getFullYear() %> Eleazar Gonzalez. All Rights Reserved.</p>
                <div class="social-links">
                    <a href="https://linkedin.com/in/eleazargonzalezh/" target="_blank"><i class="fab fa-linkedin"></i></a>
                    <a href="https://github.com/Eleazarrr1979/" target="_blank"><i class="fab fa-github"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>